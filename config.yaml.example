# AI Translation Benchmark Configuration
# Author: Zoltan Tamas Toth

# Provider Configurations
providers:
  # OpenAI Provider
  - type: openai
    name: OpenAI GPT-4
    model: gpt-4
    enabled: true
    timeout: 30
  
  - type: openai
    name: OpenAI GPT-3.5 Turbo
    model: gpt-3.5-turbo
    enabled: true
    timeout: 30
  
  # Local OpenAI-compatible endpoints (e.g., LM Studio)
  - type: local_openai
    name: Local Model 1
    base_url: http://localhost:1234/v1
    model: local-model
    enabled: false
    timeout: 60
  
  - type: local_openai
    name: Local Model 2
    base_url: http://localhost:1235/v1
    model: local-model-2
    enabled: false
    timeout: 60

# Supported Languages
