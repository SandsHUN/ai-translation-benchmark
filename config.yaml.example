# Evaluation Metrics Configuration
metrics:
  # Heuristic weights (reference-free)
  heuristics:
    language_detection:
      weight: 0.15
      enabled: true
    
    length_ratio:
      weight: 0.10
      enabled: true
      min_ratio: 0.5
      max_ratio: 2.0
    
    repetition:
      weight: 0.15
      enabled: true
      max_ngram_size: 4
    
    preservation:
      weight: 0.20
      enabled: true
      check_numbers: true
      check_punctuation: true
      check_entities: true
  
  # Semantic similarity
  semantic:
    weight: 0.40
    enabled: true
    model: sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
  
  # Reference-based metrics (when reference is provided)
  reference_based:
    bleu:
      weight: 0.30
      enabled: true
    
    chrf:
      weight: 0.35
      enabled: true
    
    bertscore:
      weight: 0.35
      enabled: true

# General Settings
settings:
  max_text_length: 5000
  default_timeout: 30
  enable_caching: false
  export_formats:
    - json
    - csv
